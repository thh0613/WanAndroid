<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.taohuahua.wanandroid.widget.MsgView
        android:id="@+id/home_search_view"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="42dp"
        android:drawableLeft="@drawable/icon_search_view"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:hint="@string/home_search_hint"
        android:paddingLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:mv_backgroundColor="@color/color_f0"
        app:mv_cornerRadius="20dp"
        app:mv_strokeColor="@color/color_ededed"
        app:mv_strokeWidth="1dp"/>

    <ImageView
        android:id="@+id/plus_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/btn_home_plus"
        app:layout_constraintBottom_toBottomOf="@id/home_search_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_search_view"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_article_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_search_view"/>

</android.support.constraint.ConstraintLayout>