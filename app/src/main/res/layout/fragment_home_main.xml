<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.SearchView
        android:id="@+id/home_search_view"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/search_view_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/home_search_hint"
        app:searchIcon="@drawable/icon_search_view"/>

    <ImageView
        android:id="@+id/plus_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/btn_home_plus"
        app:layout_constraintBottom_toBottomOf="@id/home_search_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_search_view"/>


    <include
        layout="@layout/widget_banner_slide_view"
        android:id="@+id/fragment_home_banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/home_search_view"
        android:layout_marginTop="12dp"/>

</android.support.constraint.ConstraintLayout>